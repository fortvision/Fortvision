<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../app/code/Magento/Webapi/etc/webapi.xsd">
    <route method="GET" url="/V1/fortvision/getMagentoId/">
        <service class="Fortvision\Platform\Block\Fortvision" method="getMagentoId"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/fortvision/getList/">
        <service class="Fortvision\Platform\Block\MainVision" method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/fortvision/getList/">
        <service class="Fortvision\Platform\Block\MainVision" method="forceExport"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

</routes>

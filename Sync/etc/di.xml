<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Fortvision Sync DB Command -->
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="fortvision_db_sync" xsi:type="object">
                    Fortvision\Sync\Console\Command\Sync
                </item>
            </argument>
        </arguments>
    </type>

    <!-- Fortvision Sync Logger -->
    <type name="Fortvision\Sync\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Fortvision\Sync\Logger\Integration">
        <arguments>
            <argument name="name" xsi:type="string">loggerFortvisionSync</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Fortvision\Sync\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
</config>
